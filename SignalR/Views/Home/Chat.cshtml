@model SignalR.ViewModel.ChatVM

<input type="hidden" id="hdUserId" value="@Model.UserId" />

<div class="container border m-3 p-4">
    <div class="row">
        <div class="col-3">Создать комнату</div>
        <div class="col-4"><input type="text" class="form-control" id="createRoomName"></div>
        <div class="col-3">
            <input type="button" class="btn btn-primary" onclick="@($"addnewRoom({Model.MaxRoomAllowed})")" id="btnCreateRoom" value="Создать комнату" /></div>
    </div>

    <div class="row pt-3">
        <div class="col-3">Удалить комнату</div>
        <div class="col-4">
            <select class="form-select" id="ddlDelRoom" >

            </select>

        </div>
        <div class="col-3">
            <input type="button" class="btn btn-danger" onclick="deleteRoom();" value="Удалить комнату" /></div>
    </div>
</div>

<div class="container border m-3 p-4">
    <div class="row">
        <div class="col-3">Выбрать комнату</div>
        <div class="col-4">
            <select class="form-select" id="ddlSelRoom" >

            </select>

        </div>

    </div>

    <div class="row pt-3">
        <div class="col-3">Отправить комнате сообщение</div>
        <div class="col-4">
            <input type="text" class="form-control" id="txtPublicMessage">
        </div>
        <div class="col-3">
            <input type="button" class="btn btn-info" onclick="sendPublicMessage()" value="Отправить комнате сообщение" /></div>
    </div>
</div>
<div class="container border m-3 p-4">
    <div class="row">
        <div class="col-3">Выбрать пользователя</div>
        <div class="col-4">
            <select class="form-select" id="ddlSelUser" >

            </select>

        </div>

    </div>

    <div class="row pt-3">
        <div class="col-3">Отправить пользователю сообщение</div>
        <div class="col-4"><input type="text" class="form-control" id="txtPrivateMessage"></div>
        <div class="col-3">
            <input type="button" class="btn btn-secondary" onclick="sendPrivateMessage();" id="sendButton" value="Отправить пользователю сообщение" /></div>
    </div>
</div>

<div class="container border m-3 p-4 bg-light">

    <div class="row" style="min-height:200px;">
        <div class="col-12">
            Список сообщений:
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>


<script src="~/js/signalr.js"></script>
<script src="~/js/chat.js"></script>